<%- include ("../partials/header") %>
<div class="container">
    <div class="jumbotron">
        <div style="display:flex;">
            <div style="width:100%;">
                <h1>Welcome to Engineer's Library</h1>
                <p>Help other's by uploading a new book.</p>
                <a href="/books/new"><button class="btn btn-success">Add New Book</button></a>
            </div>
            <div style="width:40%;">
                <img src="/img/book.png" class="icon_img">
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">CSE<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Civil Engg.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Mechanical Engg.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">B.Sc.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">B.A.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Polytechnic</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">H.M.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">B.A.LLB</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">XII</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">UPSC</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Newspaper</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Magazine</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="search-row">
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Enter title or author" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
    </div>
    <div class="row " style="display:flex;">
        <% books.forEach(function(book){ %>
        <div class="col-md-3 col-sm-6 col-xs-18">
            <div class="thumbnail">
                <img src="<%=book.bookcover%>">
                <div class="caption">
                    <h6><%= book.bookname %></h6>
                    <p>by:<%= book.bookauthor %></p>
                     <a href="/books/<%=book._id %>"><button class="btn btn-info">Open</button></a>
                    <button class="btn btn-primary">Download</button>
                </div>
            </div>
        </div>
        <% }); %>

    </div>
</div>
<%- include ("../partials/footer") %>